<UserControl x:Class="Nachiappan.BalanceSheet.LedgerOptionUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Nachiappan.BalanceSheet"
             xmlns:balanceSheetViewModel="clr-namespace:Nachiappan.BalanceSheetViewModel;assembly=BalanceSheetViewModel"
             mc:Ignorable="d" 
             d:DataContext="{d:DesignInstance balanceSheetViewModel:LedgerOptionViewModel}"
             d:DesignHeight="30" d:DesignWidth="300">
    <Grid Margin="1">
        <Border BorderThickness="1" BorderBrush="Black" CornerRadius="4">
            <Grid Margin="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="80"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>
                <ComboBox Grid.Column="0" Height="20" ItemsSource="{Binding AccountTypes}" SelectedItem="{Binding AccountType}" VerticalAlignment="Center" Margin="2,0,0,0"/>
                <TextBlock Grid.Column="1" Text="{Binding Name}" VerticalAlignment="Center" Margin="4,0,0,0"/>
            </Grid>
        </Border>
    </Grid>
</UserControl>
